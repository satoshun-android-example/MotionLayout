<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:motion="http://schemas.android.com/apk/res-auto">

  <Transition
    android:id="@+id/image_transition"
    motion:constraintSetEnd="@+id/end"
    motion:constraintSetStart="@+id/start"
    motion:duration="5000"
    motion:motionInterpolator="easeInOut" />

  <ConstraintSet android:id="@+id/start">
    <Constraint
      android:id="@id/left"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginEnd="120dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@id/right"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginStart="120dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintStart_toEndOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@id/icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:alpha="0"
      android:scaleX="0.75"
      android:scaleY="0.75"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />
  </ConstraintSet>

  <ConstraintSet android:id="@+id/end">
    <Constraint
      android:id="@id/left"
      android:layout_width="120dp"
      android:layout_height="120dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toStartOf="@id/right"
      motion:layout_constraintHorizontal_chainStyle="packed"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@id/right"
      android:layout_width="120dp"
      android:layout_height="120dp"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toEndOf="@id/left"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@id/icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:alpha="1"
      android:scaleX="1"
      android:scaleY="1"
      motion:layout_constraintBottom_toBottomOf="parent"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />
  </ConstraintSet>

  <KeyFrameSet>
    <KeyAttribute
      android:rotation="-90"
      motion:framePosition="25"
      motion:motionTarget="@id/left" />

    <KeyAttribute
      motion:framePosition="50"
      motion:motionTarget="@id/left"
      motion:progress="100" />

    <KeyAttribute
      motion:framePosition="100"
      motion:motionTarget="@id/left"
      motion:progress="100" />
  </KeyFrameSet>

  <KeyFrameSet>
    <KeyAttribute
      android:rotation="90"
      motion:framePosition="25"
      motion:motionTarget="@id/right" />
  </KeyFrameSet>

  <KeyFrameSet>
    <KeyAttribute
      android:alpha="0"
      android:scaleX="0.75"
      android:scaleY="0.75"
      motion:framePosition="50"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:alpha="1"
      android:scaleX="1.40"
      android:scaleY="1.40"
      motion:framePosition="60"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.7"
      android:scaleY="0.7"
      motion:framePosition="70"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="1.25"
      android:scaleY="1.25"
      motion:framePosition="80"
      motion:motionTarget="@id/icon" />

    <KeyAttribute
      android:scaleX="0.8"
      android:scaleY="0.8"
      motion:framePosition="90"
      motion:motionTarget="@id/icon" />
  </KeyFrameSet>
</MotionScene>
